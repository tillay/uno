# ---------- build stage ----------
FROM golang:1.22-bookworm AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o uno

# ---------- runtime stage ----------
FROM debian:bookworm-slim

# Create non-root user
RUN useradd -r -u 10001 -g nogroup uno

WORKDIR /app

RUN apt-get update \
    && apt-get install -y ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/uno /app/uno

# Fix ownership
RUN chown uno:nogroup /app/uno

USER uno

EXPOSE 7777

CMD ["./uno"]

